<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.google.firebase.udacity.mychatapp">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyChatApp">
        <activity
            android:name="com.themarto.mychatapp.UpdateProfile"
            android:exported="true" />
        <activity android:name="com.themarto.mychatapp.ChatActivity" />
        <activity android:name="com.themarto.mychatapp.SetProfile" />
        <activity android:name="com.themarto.mychatapp.OtpAuthentication" />
        <activity android:name="com.themarto.mychatapp.MainActivity" />
        <activity android:name="com.themarto.mychatapp.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>