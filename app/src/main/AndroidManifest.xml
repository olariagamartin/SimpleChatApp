<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.themarto.mychatapp">

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_my_chat_app"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_my_chat_app"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyChatApp">
        <activity
            android:name="com.themarto.mychatapp.ChatActivity"
            android:exported="true" />
        <activity
            android:name="com.themarto.mychatapp.UpdateProfile"
            android:exported="true" />
        <activity android:name="com.themarto.mychatapp.ChatListActivity" />
        <activity android:name="com.themarto.mychatapp.loginActivity.SetProfile" />
        <activity android:name="com.themarto.mychatapp.loginActivity.OtpAuthentication" />
        <activity android:name="com.themarto.mychatapp.loginActivity.LoginActivity" />
        <activity android:name="com.themarto.mychatapp.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>